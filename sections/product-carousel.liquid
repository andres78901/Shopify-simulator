<section class="product-carousel" id="products">
  <h2>All Products</h2>
  <div class="product-carousel__list">
    <button class="product-carousel__arrow product-carousel__arrow--left" aria-label="Previous">&#8592;</button>
    <div class="product-carousel__items">
      {% for product in products | slice: 0, 4 %}
        {% render 'product-card', product: product %}
      {% endfor %}
    </div>
    <button class="product-carousel__arrow product-carousel__arrow--right" aria-label="Next">&#8594;</button>
  </div>
  <button class="product-carousel__view-all">View All Products</button>
  <div class="product-grid" style="display:none; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr)); gap: 1.5rem; margin-top:2rem;">
    {% for product in products %}
      {% render 'product-card', product: product %}
    {% endfor %}
  </div>
</section>
